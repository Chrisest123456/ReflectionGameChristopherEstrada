<div class="level" id="quiz" style="display:none;" style="display:none; background:#222; padding:20px; border:2px solid #ffd700; border-radius:10px; max-width:700px; margin:30px auto;">
    <h2 style="color:#ffd700;">🧠 Final Quiz</h2>
    <p>What is a key trait of an entrepreneurial mindset?</p>
    <button class="btn" onclick="answerQuiz(this, true)">Willing to take risks</button>
    <button class="btn" onclick="answerQuiz(this, false)">Avoids uncertainty</button>
    <p>What helps entrepreneurs grow after failure?</p>
    <button class="btn" onclick="answerQuiz(this, true)">Reflection</button>
    <button class="btn" onclick="answerQuiz(this, false)">Blaming others</button>
    <div id="quizResult"></div>
    <button class="btn" onclick="showCongratsScreen()">Finish</button>
  </div>
  <div id="congratsScreen" style="display:none; text-align:center; padding:40px;">
    <h2 style="color:#00ffcc; font-size:2em;">🏆 Congratulations!</h2>
    <p>You’ve completed all levels and defeated the Boss of Doubt!</p>
    <button class="btn" onclick="window.location.reload()">🔁 Play Again</button>
  </div>
    
  </div>

  <script>
    const levels = document.querySelectorAll('.level');
    function startGame() {
      document.getElementById('startScreen').style.display = 'none';
      levels[0].style.display = 'block';
    }

    for (let i = 0; i < levels.length - 2; i++) {
      const btn = document.createElement('button');
      btn.className = 'btn btn-glow';
      btn.innerText = 'Next';
      btn.onclick = () => {
        levels[i].style.display = 'none';
        levels[i + 1].style.display = 'block';
        levels[i + 1].classList.add('fade-in');
        showXPMessage(i + 1);
        if (i + 1 === 9) setTimeout(() => {
  document.getElementById('boss').style.display = 'block';
  setTimeout(() => document.getElementById('quiz').style.display = 'block', 2000);
}, 1000);
      };
      levels[i].appendChild(btn);
    }

    let score = 0;
    function answerQuiz(btn, isCorrect) {
      if (isCorrect) {
        btn.style.backgroundColor = '#0f0';
        score++;
      } else {
        btn.style.backgroundColor = '#f00';
        const msg = document.createElement('p');
        msg.innerText = '❌ Try again! That’s not correct.';
        msg.className = 'feedback-msg';
        msg.style.color = '#ff4444';
        btn.parentNode.insertBefore(msg, btn.nextSibling);
      }
      btn.disabled = true;
      const total = document.querySelectorAll('#quiz button').length / 2;
      if (score >= total) {
        document.getElementById('quizResult').innerHTML = '<p style="color:#0f0">🎉 You passed the quiz and completed the quest!</p>';
        document.getElementById('playAgain').style.display = 'block';
      }
    }
  function showXPMessage(levelNum) {
      const xpMsg = document.createElement('div');
      xpMsg.style.background = '#111';
      xpMsg.style.color = '#0f0';
      xpMsg.style.padding = '10px';
      xpMsg.style.marginTop = '10px';
      xpMsg.style.border = '2px dashed #0f0';
      xpMsg.style.borderRadius = '5px';
      xpMsg.style.fontWeight = 'bold';
      const messages = [
        '🧠 XP Gained! You unlocked Entrepreneur Basics!',
        '🧠 XP Gained! Mindset Level Unlocked!',
        '🛠️ XP Gained! Learned from Failure!',
        '🧩 XP Gained! Resilience Boost Achieved!',
        '📈 XP Gained! Economic Impact Understood!',
        '🌍 XP Gained! Social Awareness Activated!',
        '💡 XP Gained! Idea Engine Running!',
        '📚 XP Gained! Lifelong Learning On!',
        '🔁 XP Gained! Reflection Powers Boosted!',
        '🌟 XP Gained! Growth Mindset Mastered!'
      ];
      xpMsg.innerText = messages[levelNum] || '🎉 XP Gained!';
      xpMsg.classList.add('xp-pop');
      levels[levelNum].appendChild(xpMsg);
    }
    function showCongratsScreen() {
    document.getElementById('quiz').style.display = 'none';
    document.getElementById('congratsScreen').style.display = 'block';
  }
</script>
<div id="miniGame" style="position:fixed; top:100px; right:20px; background:#111; color:#0f0; border:2px solid #0f0; border-radius:10px; padding:15px; z-index:999; max-width:200px;">
  <h3 style="margin-top:0;">🎯 Side Quest</h3>
  <p>Earn XP by clicking:</p>
  <button class="btn" onclick="earnXP()">Tap to Earn XP</button>
  <p id="xpTotal">XP: 0</p>
</div>
<script>
let xp = 0;
function earnXP() {
  xp++;
  document.getElementById('xpTotal').innerText = `XP: ${xp}`;
}
</script>
<div id="funFacts" style="position:fixed; top:100px; left:20px; background:#111; color:#ffd700; border:2px solid #ffd700; border-radius:10px; padding:15px; z-index:999; max-width:220px;">
  <h3 style="margin-top:0;">💡 Fun Fact</h3>
  <p id="factBox">Did you know? The word 'entrepreneur' comes from a French word meaning 'to undertake'.</p>
</div>
<script>
  const facts = [
    "The word 'entrepreneur' comes from French meaning 'to undertake'.",
    "Elon Musk started SpaceX with nearly all his personal savings.",
    "Most entrepreneurs fail at least once before succeeding.",
    "Social entrepreneurs focus more on impact than profit.",
    "Many entrepreneurs say failure taught them more than success."
  ];
  setInterval(() => {
    const box = document.getElementById('factBox');
    const index = Math.floor(Math.random() * facts.length);
    box.innerText = `Did you know? ${facts[index]}`;
  }, 8000);
</script>
